<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/frm_avata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/imv_avata_chat"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:src="@drawable/default_male_bg" />

        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="17dp"
            android:id="@+id/imv_point_chat"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/ic_status_online_grid_view"
            android:layout_gravity="left|center_vertical" />
    </FrameLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt_name_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/frm_avata"
            android:text="bbbb"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="15sp"/>
         <TextView
            android:textSize="10sp"
             android:id="@+id/txt_content_reciver_chat"
             android:layout_marginTop="20dp"
             android:background="@drawable/ic_menu_item_chat_to_me_bar"
             android:text="aaa"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_menu_item_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imv_location_chat"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:textColor="@android:color/holo_green_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0.6 mi"
                android:id="@+id/txt_content_location_chat"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imv_location_chat"
                android:layout_toEndOf="@+id/imv_location_chat" />

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_menu_item_time_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imv_time_chat"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/txt_content_location_chat"
                android:layout_toEndOf="@+id/txt_content_location_chat" />

            <TextView
                android:textColor="@android:color/holo_green_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="4d"
                android:id="@+id/txt_content_time_chat"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imv_time_chat"
                android:layout_toEndOf="@+id/imv_time_chat" />

            <TextView
                android:textSize="10sp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/ic_menu_item_chat_by_me_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="bbbb"
                android:id="@+id/txt_content_send_chat"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

    </FrameLayout>
    <Button

        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/background_delete_chat"
        android:textSize="10sp"
        android:textAllCaps="false"
        android:text="delete"
        android:id="@+id/btn_delete_chat"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_margin="15dp"
        android:layout_height="match_parent" />
</LinearLayout>