<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="56dp"
             android:layout_height="56dp"
    >

    <ImageView
        android:id="@+id/imv_avata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/default_male_bg"/>

    <ImageView
        android:id="@+id/imv_point"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_margin="5dp"
        android:src="@drawable/ic_status_online_grid_view"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:text="aaa"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold"/>

    <FrameLayout
        android:id="@+id/frm_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top">

        <ImageView
            android:id="@+id/imv_notification_grird"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/ic_menu_item_notification"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/txt_number_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="3"
            android:textColor="@android:color/white"
            android:textSize="7sp"
            android:textStyle="bold"/>
    </FrameLayout>

</FrameLayout>