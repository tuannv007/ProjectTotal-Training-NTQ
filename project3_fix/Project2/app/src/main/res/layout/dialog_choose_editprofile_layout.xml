<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/layout"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                style="@style/textViewDialogEditProfile"
                android:text="@string/askMe"
                />
            <RadioButton
                android:id="@+id/rdb_Askme"
               style="@style/radioButtonEditProfile" />
        </LinearLayout>
       <View style="@style/viewLine"
           />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                style="@style/textViewDialogEditProfile"
                android:text="@string/singger"
                />
            <RadioButton
                android:id="@+id/rdb_singer"
                style="@style/radioButtonEditProfile" />
        </LinearLayout>
        <View style="@style/viewLine"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                style="@style/textViewDialogEditProfile"
                android:text="@string/inARelationship"
                />
            <RadioButton
                android:id="@+id/rdb_relationship"
                style="@style/radioButtonEditProfile" />
        </LinearLayout>
        <View style="@style/viewLine"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                style="@style/textViewDialogEditProfile"
                android:text="@string/maried"
                />
            <RadioButton
                android:id="@+id/rdb_maried"
                style="@style/radioButtonEditProfile" />
        </LinearLayout>
        <View style="@style/viewLine"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                style="@style/textViewDialogEditProfile"
                android:text="@string/compalicates"
                />
            <RadioButton
                android:id="@+id/rdb_compalicate"
                style="@style/radioButtonEditProfile" />
        </LinearLayout>
        <View style="@style/viewLine"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                style="@style/textViewDialogEditProfile"
                android:text="@string/inanOpenRelationship"
                />
            <RadioButton
                android:id="@+id/rdb_open_relationship"
                style="@style/radioButtonEditProfile" />
        </LinearLayout>
        <View style="@style/viewLine"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                style="@style/textViewDialogEditProfile"
                android:text="@string/separated"
                />
            <RadioButton
                android:id="@+id/rdb_separated"
                style="@style/radioButtonEditProfile" />
        </LinearLayout>
        <View style="@style/viewLine"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                style="@style/textViewDialogEditProfile"
                android:text="@string/divorced"
                />
            <RadioButton
                android:id="@+id/rdb_divorced"
                style="@style/radioButtonEditProfile" />
        </LinearLayout>
        <View style="@style/viewLine"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                style="@style/textViewDialogEditProfile"
                android:text="@string/union"
                />
            <RadioButton
                android:id="@+id/rdb_union"
                style="@style/radioButtonEditProfile" />
        </LinearLayout>
        <View style="@style/viewLine"
            />
    </LinearLayout>


</ScrollView>
