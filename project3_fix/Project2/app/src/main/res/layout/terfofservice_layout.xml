<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/colorHeader"
        android:id="@+id/rltHeader"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
            android:id="@+id/btn_back_termofservice"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="50dp"
            android:background="@drawable/backround_button_back"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/terms_of_service"
            android:layout_toRightOf="@id/btn_back_termofservice"
            android:layout_toEndOf="@id/btn_back_termofservice"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <WebView
        android:id="@+id/webLoadData"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </WebView>
    </LinearLayout>