<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:radius="@dimen/radiusButton"/>
            <solid android:color="@color/colorButton"/>

            <gradient
                android:angle="90"
                android:endColor="#f5f3f3"
                android:startColor="#D8D8D8"
                />
            <stroke
                android:width="1px"
                android:color="@color/colorBorderButton"/>
        </shape>
    </item>
    <item>
        <selector>
            <item
                android:drawable="@color/colorBackground"
                android:state_pressed="true"/>
        </selector>
    </item>
</layer-list>