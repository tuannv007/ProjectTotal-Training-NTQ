<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="90dp"
              android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/frm_avata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imv_avata_chat"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:layout_margin="10dp"
            android:src="@drawable/default_male_bg"/>

        <ImageView
            android:id="@+id/imv_point_chat"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginBottom="17dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_status_online_grid_view"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_name_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/frm_avata"
            android:text="bbbb"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/txt_content_reciver_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_menu_item_chat_to_me_bar"
            android:text="aaa"
            android:textSize="10sp"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/imv_location_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_menu_item_distance"/>

            <TextView
                android:id="@+id/txt_content_location_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imv_location_chat"
                android:layout_toRightOf="@+id/imv_location_chat"
                android:text="0.6 mi"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/holo_green_dark"/>

            <ImageView
                android:id="@+id/imv_time_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/txt_content_location_chat"
                android:layout_toRightOf="@+id/txt_content_location_chat"
                android:src="@drawable/ic_menu_item_time_range"/>

            <TextView
                android:id="@+id/txt_content_time_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imv_time_chat"
                android:layout_toRightOf="@+id/imv_time_chat"
                android:text="4d"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/holo_green_dark"/>

            <TextView
                android:id="@+id/txt_content_send_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="7dp"
                android:background="@drawable/ic_menu_item_chat_by_me_bar"
                android:text="bbbb"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="10sp"/>

        </RelativeLayout>

    </FrameLayout>

    <Button

        android:id="@+id/btn_delete_chat"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:background="@drawable/background_delete_chat"
        android:text="delete"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:textStyle="bold"/>
</LinearLayout>