<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/colorHeader">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="@dimen/textSeventDp"
        android:layout_marginStart="@dimen/textSeventDp"
        android:layout_marginTop="7dp"
        android:layout_weight="0.7"
        android:background="@drawable/background_button_main2">

        <ImageView
            android:id="@+id/imvDrawerOpenAution"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/nav_menu"/>
    </FrameLayout>

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:text="@string/aution"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

    <FrameLayout
        android:id="@+id/frm_chat_message_aution"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="@dimen/textSeventDp"
        android:layout_marginLeft="@dimen/textSeventDp"
        android:layout_marginStart="@dimen/textSeventDp"
        android:layout_marginTop="@dimen/textSeventDp"
        android:layout_weight="0.7"
        android:background="@drawable/background_button_main2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/nav_message"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/ic_menu_item_notification"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="@string/three"
            android:textColor="@android:color/white"
            android:textSize="10sp"/>
    </FrameLayout>

</LinearLayout>