<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorHeader">

        <Button
            android:id="@+id/btn_back_distance"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/backround_button_back"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/distance"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <FrameLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="@dimen/textSeventDp"
            android:layout_marginLeft="@dimen/textSeventDp"
            android:layout_marginStart="@dimen/textSeventDp"
            android:layout_marginTop="@dimen/textSeventDp"
            android:layout_weight="0.7"
            android:background="@drawable/background_button_main2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/nav_message"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/ic_menu_item_notification"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginTop="3dp"
                android:text="@string/three"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:background="@drawable/background_layout_setting_one">

        <TextView
            android:id="@+id/txtMiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/miles"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            />

        <RadioGroup
            android:id="@+id/rdg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rdbMiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"/>

            <RadioButton
                android:id="@+id/rdb_kilomet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"/>
        </RadioGroup>

        <View
            android:id="@+id/view_line5"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/txtMiles"
            android:background="@android:color/black"
            />

        <TextView
            android:id="@+id/txt_kilomet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_line5"
            android:layout_margin="5dp"
            android:text="@string/kilomet"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            />

    </RelativeLayout>
</LinearLayout>