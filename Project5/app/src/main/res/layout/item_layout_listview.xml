<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frm_avata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imv_avata_list"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/default_male_bg"/>

        <ImageView
            android:id="@+id/imv_point_list"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_status_online_grid_view"/>

        <FrameLayout
            android:id="@+id/frm_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top">

            <ImageView
                android:id="@+id/imv_notification_list"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_menu_item_notification"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/txt_number_notification_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="3"
                android:textColor="@android:color/white"
                android:textSize="7sp"
                android:textStyle="bold"/>
        </FrameLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/txt_name_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/frm_avata"
        android:text="bbbbbbbbbbb"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imv_doublephai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_name_listview"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/frm_avata"
        android:src="@drawable/ic_status"/>

    <TextView
        android:id="@+id/txt_content_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imv_doublephai"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imv_doublephai"
        android:text="ccccccccccccc"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/txt_sttatus_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="3dp"
        android:layout_marginTop="10dp"
        android:text="online"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <TextView
        android:id="@+id/txt_distance_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_sttatus_list"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@+id/txt_sttatus_list"
        android:layout_toStartOf="@+id/txt_sttatus_list"
        android:text="24.9 mi"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <ImageView
        android:id="@+id/imv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_distance_list"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/txt_distance_list"
        android:layout_toStartOf="@+id/txt_distance_list"
        android:src="@drawable/ic_fragment_share_buzz_location"/>

    <TextView
        android:id="@+id/txt_age_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imv_location"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@+id/imv_location"
        android:layout_toStartOf="@+id/imv_location"
        android:text="25yo"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

</RelativeLayout>