<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorHeader">

        <Button
            android:id="@+id/btn_back_distance"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="50dp"
            android:background="@drawable/backround_button_back"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/distance"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <FrameLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="@dimen/textSeventDp"
            android:layout_marginLeft="@dimen/textSeventDp"
            android:layout_marginStart="@dimen/textSeventDp"
            android:layout_marginTop="@dimen/textSeventDp"
            android:layout_weight="0.7"
            android:background="@drawable/background_button_main2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/nav_message" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/ic_menu_item_notification" />

            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:text="@string/three"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </FrameLayout>
    </LinearLayout>
            <RelativeLayout
                android:background="@drawable/background_layout_setting_one"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="80dp">
                <TextView
                    android:textColor="@android:color/black"
                    android:layout_margin="5dp"
                    android:id="@+id/txtMiles"
                    android:text="@string/miles"
                    android:textSize="25sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     />
                <RadioGroup
                    android:layout_width="match_parent"
                    android:id="@+id/rdg"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/rdbMiles"
                        android:layout_gravity="right" />
                    <RadioButton
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rdb_kilomet"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="right" />
                </RadioGroup>

                <View
                    android:id="@+id/view_line5"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/txtMiles"
                    android:background="@android:color/black"
                    />
                <TextView
                    android:textColor="@android:color/black"
                    android:layout_margin="5dp"
                    android:id="@+id/txt_kilomet"
                    android:text="@string/kilomet"
                    android:textSize="25sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_line5"
                    />

            </RelativeLayout>
</LinearLayout>