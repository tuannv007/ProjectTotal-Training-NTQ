<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/colorHeader"
        android:id="@+id/rltHeader"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
            android:id="@+id/btn_back_termofservice"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="50dp"
            android:background="@drawable/backround_button_back"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/deActivateAccount"
            android:layout_toRightOf="@id/btn_back_termofservice"
            android:layout_toEndOf="@id/btn_back_termofservice"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:textSize="15sp"
                android:id="@+id/txt_content_deactive"
                android:background="@drawable/background_text_deactive"
                android:text="@string/remove"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:textColor="@android:color/white"
                android:layout_below="@+id/rltHeader"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.51" />
            <Button
                android:id="@+id/btn_dont_deactivate"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:text="@string/dontActive"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/background_dont_active_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="131dp"
                android:layout_below="@+id/txt_content_deactive" />
            <Button
                android:textSize="20sp"
                android:textAllCaps="false"
                android:text="@string/activate"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/background_yes_active_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/btn_dont_deactivate" />
        </LinearLayout>
    </ScrollView>



</LinearLayout>